
extends layout

block content
  .container
    .row.home-content
      .col.m12.l8#home-content-text
        //- content from MD file
        !=contents['index.md'].html
      .col.m4.l4.center-align.valign-wrapper#home-side-image
        img(src=contents['index.md'].metadata.image).valign
    .row
      .embed-container
        iframe(src=contents['index.md'].metadata.video frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen)
    .row
      block prepend footer
        div.nav
          if prevPage
            a(href=prevPage.url) &laquo; Newer
          else
            a(href='/archive.html') &laquo; Archives
          if nextPage
            a(href=nextPage.url) Next page &raquo;
