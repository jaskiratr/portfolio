doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
      link(rel="stylesheet", type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css")
      link(rel='stylesheet', href=contents.css['materialize.css'].url)
      link(rel='stylesheet', href=contents.css['glslEditor.css'].url)
      link(rel='stylesheet', href=contents.css['custom.css'].url)
  body(class=bodyclass)
    header.header
      nav.white.no-shadow(role='navigation')
        .nav-wrapper.container
          a#logo-container.brand-logo(href='#').black-text JASKIRAT R
          ul.right.hide-on-med-and-down
            li
              a(href='/').black-text.nav-link Home
            li
              a(href='/projects').black-text.nav-link Projects
            li
              a(href='/about').black-text.nav-link About
            li
              a(href='http://jaskiratr.tumblr.com/').black-text.nav-link Blog
          ul#slide-out.side-nav
            li
              .userView
                img.background(src=contents.images['bg.jpg'].url)
                a(href='#!user')
                  img.circle(src=contents.images['profile.jpg'].url)
                a(href='/')
                  span.white-text.name Jaskirat Randhawa
                a(href='mailto:jaskiratr@newschool.edu')
                  span.white-text.email jaskiratr@gmail.com
            li
              a(href='/').waves-effect.black-text 
                i.material-icons cloud
                | Home
            li
              a(href='/projects').waves-effect.black-text
                i.material-icons dashboard
                | Projects
            li
              a(href='/about').waves-effect.black-text 
                i.material-icons recent_actors
                | About
            li
              a(href='http://jaskiratr.tumblr.com/').waves-effect.black-text 
                i.material-icons view_day
                | Blog
          a.button-collapse(href='#', data-activates='slide-out').black-text
            i.material-icons menu
    div.content
      block content
      block header
    footer
      div.content-wrap
        block footer
          section.row.copy
            hr      
            .col.m8
              p &copy; #{ new Date().getFullYear() } #{ locals.owner }
            .iconSet.col.m4
              a(href='http://www.github.com/jaskiratr',target="_blank"): i.fa.fa-github-square.fa-lg
              a(href='http://www.vimeo.com/jaskiratr',target="_blank"): i.fa.fa-vimeo-square.fa-lg
              a(href='http://www.jaskiratr.tumblr.com',target="_blank"): i.fa.fa-tumblr-square.fa-lg
              a(href='http://www.linkedin.com/in/jaskiratr',target="_blank"): i.fa.fa-linkedin-square.fa-lg
  script(src="https://code.jquery.com/jquery-2.1.1.min.js")
  script(type="text/javascript" src=contents.js['masonry.pkgd.js'].url)
  script(type="text/javascript" src=contents.js['materialize.js'].url)
  script(type="text/javascript" src=contents.js['glslEditor.js'].url)
  script(type="text/javascript" src=contents.js['glslEditorFooter.js'].url)
  script(type="text/javascript" src=contents.js['custom.js'].url)
